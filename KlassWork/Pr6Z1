number = input('Введите целое шестизначное число > ')
if int(number) > 999999 or int(number) < 100000:
    print('ОШИБКА! ВВЕДИТЕ ШЕСТИЗНАЧНОЕ ЧИСЛО!!!')
elif int(number[0]) + int(number[1]) + int(number[2]) == int(number[3]) + int(number[4]) + int(number[5]):
    print('СЧАСТЛИВОЕ ЧИСЛО!')
else:
    print('не счастливое число')